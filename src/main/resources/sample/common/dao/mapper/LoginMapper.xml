<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sample.common.dao.mapper.LoginMapper">

<select id="selectByUsername" parameterType="String" resultType="sample.common.dao.entity.Login" >
	SELECT
	id,
	username,
	password,
	created_at,
	updated_at
	FROM login
	WHERE username = #{username}
</select>

<insert id="insert">
	INSERT INTO login(username,password)
	VALUES(#{username},#{password})
</insert>

</mapper>
